<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App13.MinesweeperDifficulty"
             NavigationPage.HasNavigationBar="False"
             >
    <ContentPage.Content>
        <StackLayout BackgroundColor="Black">

            <Label Text="Choose Difficulty" TextColor="Aqua" FontSize="20" HorizontalOptions="CenterAndExpand"
                   VerticalOptions="CenterAndExpand"></Label>
            
            <Button Text="Easy" TextColor="Aqua" FontSize="20" HorizontalOptions="CenterAndExpand" x:Name="easyBTN"
                    VerticalOptions="CenterAndExpand" BackgroundColor="Gray" Clicked="EasyBTN_Clicked"></Button>

            <Button Text="Normal" TextColor="Aqua" FontSize="20" HorizontalOptions="CenterAndExpand" x:Name="mediumBTN"
                    VerticalOptions="CenterAndExpand" BackgroundColor="Gray" Clicked="MediumBTN_Clicked"></Button>

            <Button Text="Hard" TextColor="Aqua" FontSize="20" HorizontalOptions="CenterAndExpand" x:Name="hardBTN"
                    VerticalOptions="CenterAndExpand" BackgroundColor="Gray" Clicked="HardBTN_Clicked"></Button>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>