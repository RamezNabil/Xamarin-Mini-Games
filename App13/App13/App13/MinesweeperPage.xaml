<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App13.MinesweeperPage"
             NavigationPage.HasNavigationBar="false">
    <ContentPage.Content>

        <Grid BackgroundColor="Black">
                
            <Grid.RowDefinitions>
                <RowDefinition Height="1.5*"></RowDefinition>
                <RowDefinition Height="1.5*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
               
            <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Label Text="Score" TextColor="Aqua" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"
                       FontSize="18" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"></Label>

            <Label Text="0" TextColor="Aqua" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"
                       FontSize="18" x:Name="score" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"></Label>

            <Label Text="GAME OVER" TextColor="Aqua" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"
                       FontSize="18" Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2" x:Name="gameOverLabel" IsVisible="False"></Label>

            <Button Text="Play Again" TextColor="Aqua" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"
                        FontSize="16" Grid.Row="1" Grid.Column="2" x:Name="playAgainBTN" Clicked="PlayAgainBTN_Clicked"
                        BackgroundColor="Gray" IsVisible="False" Grid.ColumnSpan="2"></Button>

            <Button Text="Tutorial" TextColor="Aqua" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"
                        FontSize="16" Grid.Row="0" Grid.Column="4" x:Name="tutorialBTN"
                        Clicked="TutorialBTN_Clicked" BackgroundColor="Gray" Grid.ColumnSpan="2" ></Button>

            <Button Image="flag.png" TextColor="Aqua" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"
                        FontSize="18" Grid.Row="1" Grid.Column="4" x:Name="flagBTN" Text="6"
                        Clicked="FlagBTN_Clicked" BackgroundColor="Gray" Grid.ColumnSpan="2" ></Button>

            <Button ClassId="0" x:Name="b0" Text="" BackgroundColor="LightGray" Clicked="Button_Clicked" Grid.Row="2" Grid.Column="0" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" HeightRequest="100"></Button>
